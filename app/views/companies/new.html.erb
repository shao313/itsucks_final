<!-- Validation failure messages -->
<% if @company.errors.any? %>
  <% @company.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Add Company
      </h3>
    </div>

<div class="panel-body">

    <form action="/create_company" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for company_id -->
      <div class="form-group">
        <label for="company_name" class="control-label">
          Company
        </label>

  <textarea id="company_name" name="company_name" placeholder="Company name" class="form-control" rows="1"><%= @company.company_name %></textarea>

      </div>


      <div class="form-group">
    <button class="btn btn-success btn-block">
      Create Company
    </button>
    </div>
    <div class="form-group">

    <div class="form-group">
    <a href="/complaints/new"  class="btn btn-link btn-block">
    Cancel</a></div>
    </form>
    </div>
    </div>
