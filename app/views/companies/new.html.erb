<!-- Validation failure messages -->
<% if @company.errors.any? %>
  <% @company.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Company</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_company" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for company_name -->
      <div class="form-group">
        <label for="company_name" class="control-label">
          Company name
        </label>

        <textarea id="company_name" name="company_name" placeholder="Company name" class="form-control" rows="3"><%= @company.company_name %></textarea>
      </div>

      <button class="btn btn-success">
        Create Company
      </button>
      or
      <a href="/companies">Cancel</a>
    </form>
  </div>
</div>
