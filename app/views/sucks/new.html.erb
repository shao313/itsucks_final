<!-- Validation failure messages -->
<% if @suck.errors.any? %>
  <% @suck.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Suck</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_suck" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @suck.user_id %>">
      </div>

      <!-- Label and input for complaint_id -->
      <div class="form-group">
        <label for="complaint_id" class="control-label">
          Complaint
        </label>

        <input type="text" id="complaint_id" name="complaint_id" placeholder="Complaint" class="form-control" value="<%= @suck.complaint_id %>">
      </div>

      <button class="btn btn-success">
        Create Suck
      </button>
      or
      <a href="/sucks">Cancel</a>
    </form>
  </div>
</div>
