<!-- Validation failure messages -->
<% if @complaint.errors.any? %>
  <% @complaint.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Add Complaint
      </h3>
    </div>

<div class="panel-body">

    <form action="/create_complaint" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for company_id -->
      <div class="form-group">
        <label for="company_id" class="control-label">
          Company
        </label>

        <%= select_tag(:company_id, options_from_collection_for_select(Company.all, :id, :company_name, @complaint.company_id), :class => "form-control") %>

      </div>

      <!-- Label and input for caption -->
      <div class="form-group">
        <label for="caption_id" class="control-label">
          Tell us what sucks...
        </label>

          <%= select_tag(:caption_id, options_from_collection_for_select(Caption.all, :id, :name, @complaint.caption_id), :class => "form-control") %>

      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Detailed description
        </label>

        <textarea id="body" name="body" placeholder="Tell us why it sucks so bad." class="form-control" rows="3"><%= @complaint.body %></textarea>
      </div>

      <!-- Label and input for image_1 -->
      <div class="form-group">
        <label for="image_1" class="control-label">
          Upload Picture 1
        </label>

        <input type="text" id="image_1" name="image_1" placeholder="Image 1" class="form-control" value="<%= @complaint.image_1 %>">
      </div>

      <!-- Label and input for image_2 -->
      <div class="form-group">
        <label for="image_2" class="control-label">
          Upload Picture 2
        </label>

        <input type="text" id="image_2" name="image_2" placeholder="Image 2" class="form-control" value="<%= @complaint.image_2 %>">
      </div>

      <!-- Label and input for image_3 -->
      <div class="form-group">
        <label for="image_3" class="control-label">
          Upload Picture 3
        </label>

        <input type="text" id="image_3" name="image_3" placeholder="Image 3" class="form-control" value="<%= @complaint.image_3 %>">
      </div>

      <!-- Label and input for user_id -->
        <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">

        <div class="form-group">
      <button class="btn btn-success btn-block">
        Create Complaint
      </button>
    </div>
    <div class="form-group">

<div class="form-group">
      <a href="/complaints"  class="btn btn-link btn-block">
    Cancel</a></div>
    </form>
  </div>
</div>
