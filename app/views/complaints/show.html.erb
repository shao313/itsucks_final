<%= render @complaint %>
<div class="row">
<div class="col-md-8 col-md-offset-2">

<div class="btn-group btn-group-justified">
  <a href="/complaints" class="btn btn-info">
    <i class="fa fa-chevron-left"></i>
  </a>
  <% if current_user.id == @complaint.user_id %>
    <a href="/complaints/<%= @complaint.id %>/edit" class="btn btn-warning">
      <i class="fa fa-edit"></i>
    </a>
    <a href="/delete_complaint/<%= @complaint.id %>" class="btn btn-primary" rel="nofollow">
      <i class="fa fa-trash-o"></i>
    </a>
  <% end %>
</div>
</div>
</div>
