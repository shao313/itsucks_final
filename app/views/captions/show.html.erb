<div class="page-header">
  <h3>Caption #<%= @caption.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @caption.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/captions" class="btn btn-primary">
        Back
      </a>
      <a href="/captions/<%= @caption.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_caption/<%= @caption.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
